<odoo>
    <data>
        <!-- Plantilla del reporte -->
        <record id="report_ticket_template" model="ir.ui.view">
            <field name="name">report.ticket.template</field>
            <field name="type">qweb</field>
            <field name="model">account.move</field>
            <field name="arch" type="xml">
                <t t-name="report_ticket_template.report_ticket_template">
                    <t t-call="web.html_container">
                        <t t-foreach="docs" t-as="doc">
                            <t t-call="report_ticket_header"/>
                            <div class="page" style="width: 80mm;">
                                <h2>Factura <span t-field="doc.name"/></h2>
                                <p>Fecha de Emisión: <span t-field="doc.invoice_date"/></p>
                                <p>Cliente: <span t-field="doc.partner_id.name"/></p>
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Cantidad</th>
                                            <th>Descripción</th>
                                            <th>Precio Unitario</th>
                                            <th>Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="doc.invoice_line_ids" t-as="line">
                                            <tr>
                                                <td t-field="line.quantity"/>
                                                <td t-field="line.name"/>
                                                <td t-field="line.price_unit"/>
                                                <td t-field="line.price_total"/>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                                <p>Subtotal: <span t-field="doc.amount_untaxed"/></p>
                                <p>Impuestos: <span t-field="doc.amount_tax"/></p>
                                <h3>Total: <span t-field="doc.amount_total"/></h3>
                            </div>
                            <t t-call="report_ticket_footer"/>
                        </t>
                    </t>
                </t>
            </field>
        </record>

        <!-- Acción del reporte -->
        <record id="action_report_factura_termica" model="ir.actions.report">
            <field name="name">Reporte Térmica</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">report_ticket_template.report_ticket_template</field>
            <field name="report_file">report_ticket_template.report_ticket_template</field>
            <field name="print_report_name">'Factura de proveedor - %s' % (object.name or '')</field>
        </record>
    </data>
</odoo>
